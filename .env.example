# Environment Variables Configuration
# Copy this file to .env and update the values

# MongoDB Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your_secure_mongo_password

# JWT Secret (use a strong random string)
JWT_SECRET=your_super_secret_jwt_key_change_in_production_use_64_chars_minimum

# Nginx Proxy Manager Database
NPM_DB_ROOT_PASSWORD=your_secure_npm_root_password
NPM_DB_PASSWORD=your_secure_npm_password

# Domain Configuration (update with your domain)
DOMAIN_NAME=your-domain.com

# Optional: Custom API URL for frontend (if using different domain)
# REACT_APP_API_URL=https://api.your-domain.com/api